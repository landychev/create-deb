pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
               sh 'git fetch https://github.com/landychev/create-deb.git'
               sh 'dpkg-deb --build create-deb/'
               sh 'sudo dpkg -i create-deb.deb'
            }
        }
        stage('Test') {
            steps {
                sh 'dagens'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
